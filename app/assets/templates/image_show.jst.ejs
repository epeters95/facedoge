<div class="item photo-view" id="<%= image.id %>"><a href="#myModal" data-img-url="<%= image.get("file_url") %>" data-toggle="modal"><img src="<%= image.get("file_url") %>"></a></div>
<% $image = image %>
<script>
  $('#myModal').on('hidden.bs.modal', function (e) {
    $('body').removeClass('modal-open');
    $('.modal-backdrop').remove();
  });
  
  $('a').click(function(e) {
    $('#myModal img').attr('src', $(this).attr('data-img-url'));
  });
  
  $('img').mouseenter(function(e) {
    if ($image.get("user_id") === Facedoge.currentUser().id) {
      $('div.photos').append('<button class="profile-button" id="'+$image.id+'">Set as profile</button>');
    }
  });
  
  $('img').mouseleave(function(e) {
    if ($image.get("user_id") === Facedoge.currentUser().id) {
      $('.profile-button').remove();
    }
  });
  
</script>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
      </div>
      <div class="modal-body">
        <img style="width: 99%; margin: 0 auto">
      </div>
    </div>
  </div>
</div>