<!DOCTYPE html>
<html>
<head>
  <title>Facedoge</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="header">
    <%= render "layouts/header" %>
  </div>
  
  
  <div class="container">
      <% if signed_in? %>
      <div id="sidebar-wrapper">
        <div class="sidebar">
          <%= render "layouts/sidebar" %>
        </div>
        <style> #content-wrapper { padding-left: 250px; } </style>
      </div>
      <% end %> 
      <div id="content-wrapper">
        <div class="content">
          <%= yield %>
        </div>
      </div>
  </div>
  
</body>
</html>
